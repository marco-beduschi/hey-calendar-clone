<div class="week-grid">
  <div class="week-grid__header">
    <% Date.current.all_week.each do |day| %>
      <span class="week-grid__date">
        <small>
          <%= day.strftime("%a") %>
        </small>
        <strong>
          <%= day.strftime("%d") %>
        </strong>
      </span>
    <% end %>
  </div>
  <div class="week-grid__body">
    <% Date.current.all_week.each do |day| %>
      <div>
      </div>
    <% end %>
  </div>
</div>
